{
    "name": "@waitingliou/ts-otel-weaver",
    "version": "1.0.0",
    "description": "Zero-touch business-logic tracing and OpenTelemetry automatic instrumentation for TypeScript via compile-time AST weaving",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "opentelemetry",
        "typescript",
        "instrumentation",
        "tracing",
        "ast",
        "transformer",
        "zero-touch",
        "compile-time",
        "business-logic"
    ],
    "author": "Weiting Liou",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Lu-weiting/ts-opentelemetry-weaver.git"
    },
    "homepage": "https://github.com/Lu-weiting/ts-opentelemetry-weaver#readme",
    "bugs": {
        "url": "https://github.com/Lu-weiting/ts-opentelemetry-weaver/issues"
    },
     "exports": {
         ".": {
             "types": "./dist/index.d.ts",
             "import": "./dist/index.js",
             "require": "./dist/index.js"
         },
         "./transformer": {
             "types": "./dist/transformer/index.d.ts",
             "import": "./dist/transformer/index.js",
             "require": "./dist/transformer/index.js"
         }
     },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run build",
        "postpublish": "echo 'Successfully published @waitingliou/ts-otel-weaver to npm!'",
        "release:prepare": "./scripts/prepare-release.sh",
        "release:patch": "npm version patch && git push origin main --tags && npm publish",
        "release:minor": "npm version minor && git push origin main --tags && npm publish",
        "release:major": "npm version major && git push origin main --tags && npm publish"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0"
    },
    "peerDependencies": {
        "@opentelemetry/api": "^1.9.0",
        "typescript": "^4.5.0 || ^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
